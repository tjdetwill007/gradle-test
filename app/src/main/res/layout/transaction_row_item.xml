<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_merchant_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:text="Merchant-ID"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:text="01/13/2015"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#cccccc" />

    <TextView
        android:id="@+id/tv_reference_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_merchant_id"
        android:paddingLeft="16dp"
        android:text="Reference number"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_alias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_reference_number"
        android:paddingLeft="16dp"
        android:text="ALIAS"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tv_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_alias"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:text="CHF "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_currency"
        android:layout_toEndOf="@+id/tv_currency"
        android:layout_toRightOf="@+id/tv_currency"
        android:paddingBottom="16dp"
        android:text="10.-"
        android:textAppearance="?android:attr/textAppearanceSmall" />


    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignEnd="@+id/tv_date"
        android:layout_alignRight="@+id/tv_date"
        android:layout_below="@+id/tv_currency"
        android:background="#dbdbdb" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_reference_number"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/tv_rounded_corners"
        android:padding="3dp"
        android:text="STATUS"
        android:textColor="#ffffff"
        android:textSize="10dp" />
</RelativeLayout>